<def-group>
  <definition class="compliance" id="tftp_uses_secure_mode_systemd" version="1">
    {{{ oval_metadata("The TFTP daemon should use secure mode.", rule_title=rule_title) }}}
    <criteria comment="package tftp-server removed or /usr/lib/systemd/system/tftp.service configured correctly" operator="OR">
      <extend_definition comment="rpm package tftp-server removed" definition_ref="package_tftp-server_removed" />
      <criterion comment="tftp secure mode" test_ref="test_tftp_uses_secure_mode_systemd" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" comment="tftp secure mode" id="test_tftp_uses_secure_mode_systemd" version="1">
    <ind:object object_ref="object_tftp_uses_secure_mode_systemd" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_tftp_uses_secure_mode_systemd" version="1">
    <ind:filepath>/usr/lib/systemd/system/tftp.service</ind:filepath>
    <ind:pattern operation="pattern match">^\s*ExecStart\s*=\s*/\S+\s+-s\s+(/\S+).*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
